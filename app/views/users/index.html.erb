<div class="container">
<h1>Users</h1>
<table class="table table-hover">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Address</th>
      <th colspan="3"></th>
    </tr>
    <% @users.each do |user| %>
      <tr>
        <td scope="row"><%= user.username %></td>
        <td scope="row"><%= user.email %></td>
        <td><%= link_to '詳細', user_path(user), class: "btn btn-outline-primary btn-sm" %></td>
        <% if current_user %>
            <% if current_user == user || current_user.admin %>
                <td><%= link_to '編集', edit_user_registration_path(user), class: "btn btn-outline-primary btn-sm" %></td>
                <td><%= link_to '削除', user_registration_path(user), class: "btn btn-outline-danger btn-sm", method: :delete, data: { confirm: 'アカウントを削除しますか？？' } %></td>
            <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to '新規登録', new_user_registration_path, class: 'btn btn-primary btn-sm' %>
</div>